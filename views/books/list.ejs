<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Book List</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 py-10">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-6 text-center">Book List</h1>
    <div class="mb-6 text-center">
      <a href="/books/new" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">Add New Book</a>
    </div>

    <% books.forEach(book => { %>
      <div class="bg-white shadow rounded p-4 mb-6 flex items-center space-x-6">
        <img src="<%= book.imageUrl %>" alt="<%= book.name %>" class="w-32 h-48 object-cover rounded" />
        <div class="flex-1">
          <h2 class="text-xl font-semibold"><%= book.name %></h2>
          <p class="text-gray-600">Author: <%= book.author %></p>
          <p class="text-gray-600">Price: â‚¹<%= book.price %></p>
          <p class="text-gray-600">Pages: <%= book.pages %></p>
          <div class="mt-4 space-x-2">
            <a href="/books/<%= book._id %>/edit" class="px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600">Update</a>
            <form action="/books/<%= book._id %>/delete" method="POST" class="inline">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this book?')" class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700">Delete</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
